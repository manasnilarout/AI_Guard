# Environment
NODE_ENV=development

# Server Configuration
PORT=3000
LOG_LEVEL=debug

# Provider API Keys (Phase 1 - hardcoded for testing)
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
GEMINI_API_KEY=AIza...

# Request Configuration
REQUEST_TIMEOUT=30000
MAX_RETRIES=3
RETRY_DELAY=1000

# Proxy Configuration
MAX_REQUEST_SIZE=10mb
ENABLE_COMPRESSION=true

# MongoDB Configuration (Phase 2)
MONGODB_URI=mongodb://localhost:27017/ai_guard
MONGODB_DB_NAME=ai_guard

# Firebase Configuration (Phase 2)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=your-client-email@project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Redis Configuration (Phase 2 - optional for caching)
REDIS_URL=redis://localhost:6379

# Encryption Configuration (Phase 2)
ENCRYPTION_KEY=your-32-character-encryption-key
ENCRYPTION_IV=your-16-char-iv

# Admin Configuration (Phase 2)
ADMIN_SECRET_KEY=your-admin-secret-key

# JWT Configuration (Phase 2)
JWT_SECRET=your-jwt-secret
JWT_EXPIRES_IN=7d